<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="#FDD0E5"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/layout_me"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/view_me"/>

            <ImageView
                android:id="@+id/image_me"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_me"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_packs"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/layout_me">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/view_packs"/>
            <ImageView
                android:id="@+id/image_packs"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_pack"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>