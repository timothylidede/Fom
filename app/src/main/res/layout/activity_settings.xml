<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EDECEC">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/first_rel"
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_height="50dp"
                android:background="#EDECEC">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/ic_back"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Settings"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_alignTop="@+id/back"
                    android:layout_centerInParent="true"/>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/first_rel"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/account_title"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        app:cardCornerRadius="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Account"
                            android:layout_marginLeft="5dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/settings_card_edit"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center|start"
                            android:layout_marginLeft="10dp"
                            android:alpha=".7"
                            android:background="@drawable/ic_baseline_edit_24"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:layout_marginLeft="70dp"
                            android:text="Edit Profile"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/first_logout_cardview"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center|start"
                            android:layout_marginLeft="10dp"
                            android:alpha=".7"
                            android:background="@drawable/ic_logout"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:layout_marginLeft="70dp"
                            android:text="Logout"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="30dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        app:cardCornerRadius="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contact Us"
                            android:layout_marginLeft="5dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/fom_instagram"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center|start"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/ic_base_send" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:layout_marginLeft="70dp"
                            android:text="Instagram"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/fom_twitter"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center|start"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/ic_base_send"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:layout_marginLeft="70dp"
                            android:text="Twitter"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/fom_facebook"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center|start"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/ic_base_send"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:layout_marginLeft="70dp"
                            android:text="Facebook"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>


            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/second_logout_cardview"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:visibility="invisible"
                app:cardElevation="10dp"
                app:cardCornerRadius="10dp"
                android:backgroundTint="@color/fomdarkgrey">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Log Out?"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:textStyle="bold"/>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <Button
                            android:id="@+id/logout_button"
                            android:layout_width="150dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:backgroundTint="@color/fomred"
                            android:background="@drawable/custom_button"
                            android:text="LOGOUT"
                            android:textColor="@color/white"
                            android:textSize="18dp"/>

                        <Button
                            android:id="@+id/cancel_button"
                            android:layout_width="150dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_toRightOf="@+id/logout_button"
                            android:backgroundTint="@color/white"
                            android:background="@drawable/custom_button"
                            android:text="CANCEL"
                            android:textColor="@color/black"
                            android:textSize="18dp"/>
                    </RelativeLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>
</LinearLayout>